{% extends "_layout.twig" %}
{% block content %}
{% set slug = craft.app.request.getSegment(2) %}
{% set product = craft.entries.section('products').slug(slug).one() %}
{% set shopPage = craft.entries().section('shop') %}

<main>
    <button class="go-back"><a href="{{shopPage}}"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-big-left-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M9.586 4l-6.586 6.586a2 2 0 0 0 0 2.828l6.586 6.586a2 2 0 0 0 2.18 .434l.145 -.068a2 2 0 0 0 1.089 -1.78v-2.586h7a2 2 0 0 0 2 -2v-4l-.005 -.15a2 2 0 0 0 -1.995 -1.85l-7 -.001v-2.585a2 2 0 0 0 -3.414 -1.414z" stroke-width="0" fill="currentColor" />
    </svg></a></button>
    <div class="product-detail">
        <div class="product-image">
            <img src="assets/t-shirt1.webp" alt="Product Image">
            <img src="{{ image.url }}" alt="{{image.title}}">
        </div>
        <div class="product-info">
            <h1>{{product.productTitle}}</h1>
            <br>
            <p>{{product.productDescription}}</p>
            <br>
            <h2><strong>Prijs: â‚¬15.99</strong></h2>
            <br>
            <label for="quantity">Hoeveelheid:</label>
            <input type="number" id="quantity" value="1" min="1">
            <button class="add-to-cart">+ In mijn winkelmandje</button>
        </div>
    </div>
</main>

{% endblock %}